{
  "name": "@fdt/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run src/lib",
    "test:integration": "pnpm --filter @fdt/config build && vitest run src/integration",
    "verify:secret-rotations": "tsx src/scripts/verify-secret-rotations.ts"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.2",
    "@fastify/rate-limit": "^10.3.0",
    "@fdt/config": "workspace:*",
    "argon2": "^0.41.1",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.1",
    "fastify-raw-body": "^5.0.0",
    "fastify-plugin": "^5.0.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.13.3",
    "stripe": "^17.6.0",
    "uuid": "^11.1.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^20.17.57",
    "@types/pg": "^8.11.11",
    "@types/jsonwebtoken": "^9.0.9",
    "@fdt/eslint-config": "workspace:*",
    "@fdt/tsconfig": "workspace:*",
    "eslint": "^9.20.1",
    "supertest": "^7.1.0",
    "tsx": "^4.19.2",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.24.1",
    "vitest": "^3.0.5"
  }
}
